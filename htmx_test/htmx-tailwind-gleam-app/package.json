{
  "name": "htmx-tailwind-gleam-app",
  "version": "1.0.0",
  "description": "A simple project using htmx and Tailwind CSS on the frontend with Gleam on the backend.",
  "main": "src/app.gleam",
  "scripts": {
    "build-css": "tailwindcss -i ./static/styles.css -o ./static/output.css --minify",
    "watch-css": "tailwindcss -i ./static/styles.css -o ./static/output.css --watch",
    "start": "gleam run"
  },
  "dependencies": {
    "htmx.org": "^1.9.12"
  },
  "devDependencies": {
    "autoprefixer": "^10.0.0",
    "postcss": "^8.0.0",
    "tailwindcss": "^4.1.7"
  },
  "keywords": [
    "htmx",
    "tailwindcss",
    "gleam"
  ],
  "author": "Your Name",
  "license": "MIT"
}
